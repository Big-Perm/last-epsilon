<Window x:Class="Project_Epsilon.ConnectionManagerWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Epsilon"
        mc:Ignorable="d"
        Title="ConnectionManagerWindow" Height="480" Width="720">
    <Grid>
        <ListView x:Name="serverList" HorizontalAlignment="Left" Height="374" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="serverList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="deleteServer" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="17" Margin="32,404,0,0" RenderTransformOrigin="2.494,1.099" Click="deleteServer_Click"/>
        <Button x:Name="addServer" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="17" Margin="87,404,0,0" RenderTransformOrigin="7.224,0.599" Click="addServer_Click"/>
        <Button Content="Test Connection" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="353,225,0,0" Click="Button_Click"/>
        <TextBox Name="serverName" HorizontalAlignment="Left" Height="23" Margin="337,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="344"/>
        <TextBox Name="serverAddress" HorizontalAlignment="Left" Height="23" Margin="337,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="344"/>
        <TextBox Name="serverPort" HorizontalAlignment="Left" Height="23" Margin="337,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="26"/>
        <TextBox Name="serverUsername" HorizontalAlignment="Left" Height="23" Margin="337,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179"/>
        <Label Content="Server Nickname" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,27,0,0"/>
        <Label Content="Server Hostname / IP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,77,0,0"/>
        <Label Content="Server Port" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,124,0,0"/>
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,174,0,0"/>
        <TextBox Name="serverConnectLog" HorizontalAlignment="Left" Height="75" Margin="181,348,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430"/>
        <Button x:Name="backBtn" Content="Back
                " HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Margin="648,361,0,0" Click="backBtn_Click" Height="36"/>

    </Grid>
</Window>
