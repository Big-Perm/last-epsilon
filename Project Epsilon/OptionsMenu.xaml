<Window x:Class="Project_Epsilon.OptionsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Options Menu" Height="267" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF216299"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="ToolSetupButton" Content="Tool Setup" Margin="0,-25,0,130" Width="130" HorizontalAlignment="Center" Height="35" Click="ToolSetup_Click"/>
        <Button Name ="CavMgmtBtn" Content="Cavity Management" HorizontalAlignment="Center" Margin="0,-25,0,30" Width="130" Height="35" Click="CavMgmtBtn_Click"/>
        <Button x:Name="UDISetupBtn" Content="UDI Setup" HorizontalAlignment="Center" Margin="0,50,0,0" Width="130" Height="35" Click="UDISetupBtn_Click"/>
        <Button x:Name="BackBtn" Content="&lt; Back" Margin="0,155,0,0" Width="130" Height="35" Click="BackBtn_Click"/>
    </Grid>
</Window>
