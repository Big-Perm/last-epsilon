<Window x:Class="Project_Epsilon.OptionsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Options Menu" Height="312" Width="472"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="AliceBlue" Offset="1"/>
                <GradientStop Color="AliceBlue"/>
                <GradientStop Color="#FF89B9E4" Offset="0.801"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="ToolSetupButton" Content="Tool Setup" Margin="114,35,118,208" Width="234" HorizontalAlignment="Center" Click="ToolSetup_Click" FontWeight="Bold"/>
        <Button Name ="CavMgmtBtn" Content="Cavity Management" HorizontalAlignment="Center" Margin="114,92,118,152" Width="234" Click="CavMgmtBtn_Click" FontWeight="Bold"/>
        <Button x:Name="UDISetupBtn" Content="UDI Setup" HorizontalAlignment="Center" Margin="114,151,118,93" Width="234" Click="UDISetupBtn_Click" FontWeight="Bold"/>
        <Button x:Name="BackBtn" Content="&lt; Back" Margin="114,211,118,33" Click="BackBtn_Click" FontWeight="Bold"/>
    </Grid>
</Window>
