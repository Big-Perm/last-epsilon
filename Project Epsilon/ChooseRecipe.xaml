<Window x:Class="Project_Epsilon.ChooseRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Epsilon"
        mc:Ignorable="d"
        Title="ChooseRecipe" Height="250" Width="300" MinHeight="250" MinWidth="300"
        ResizeMode="NoResize">
    <Grid Margin="0,0,2,2">
        <Button x:Name="LoadFile" IsEnabled="True" HorizontalAlignment="Left" Margin="176,84,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click">Load Recipe</Button>
        <ListView IsEnabled="True" x:Name="selectRecipe" HorizontalAlignment="Left" Height="172" Margin="10,10,0,0" VerticalAlignment="Top" Width="134">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="newRecipeBtn" Content="Add New Recipe" HorizontalAlignment="Left" Margin="10,187,0,0" VerticalAlignment="Top" Width="96" Click="newRecipeBtn_Click"/>
        <Button x:Name="deleteRecipeBtn" Content="Delete Recipe" HorizontalAlignment="Left" Margin="111,187,0,0" VerticalAlignment="Top" Click="deleteRecipeBtn_Click"/>

    </Grid>
</Window>
