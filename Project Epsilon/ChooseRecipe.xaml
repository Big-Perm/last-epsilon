<Window x:Class="Project_Epsilon.ChooseRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Epsilon"
        mc:Ignorable="d"
        Title="ChooseRecipe" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoadFile" IsEnabled="True" Content="Load File" HorizontalAlignment="Left" Margin="176,205,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListView IsEnabled="True" x:Name="selectRecipe" HorizontalAlignment="Left" Height="109" Margin="10,164,0,0" VerticalAlignment="Top" Width="142">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="newRecipeBtn" Content="Add New Recipe" HorizontalAlignment="Left" Margin="82,310,0,0" VerticalAlignment="Top" Width="108" Click="newRecipeBtn_Click"/>

    </Grid>
</Window>
