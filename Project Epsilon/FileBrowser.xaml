<Window x:Class="Project_Epsilon.FileBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FileBrowser"  Height="218.128" Width="309.744">
    <Grid Margin="0,0,2.2,-1">
        <Label Content="Select a Machine" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="93,0,0,0"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="35,150,0,0" Click="connectButton_Click"/>
        <ListView x:Name="machineSelector" HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="270" Margin="10,26,0,0" >


            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="CancelLoad" Content="Cancel" HorizontalAlignment="Left" Margin="167,150,0,0" VerticalAlignment="Top" Width="75" Click="CancelLoad_Click"/>
    </Grid>
</Window>
